apiVersion: apps/v1
kind: Deployment
metadata:
  name: jenkins-slave
  namespace: jenkins
spec:
  replicas: 1
  selector:
    matchLabels:
      app: jenkins-slave
  template:
    metadata:
      labels:
        app: jenkins-slave
    spec:
      containers:
      - name: jenkins-slave
        image: ahmedhedihed/jenkinsslave:v1
        ports:
        - name: ssh-port
          containerPort: 22
        volumeMounts:
          - mountPath: /var/run/docker.sock
            name: docker-sock
       
      volumes:
        - name: docker-sock
          hostPath:
            path: /var/run/docker.sock


---

apiVersion: v1
kind: Service
metadata:
  name: slave-service
  namespace: jenkins
spec:
  ports:
    - port: 22
      targetPort: 22

  selector:
    app: jenkins-slave
